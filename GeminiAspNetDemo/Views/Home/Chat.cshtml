@section Scripts {
    <!-- Add marked.js for markdown support -->
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <!-- Add highlight.js for code syntax highlighting -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>

    <script>
        $(document).ready(function() {
            // Configure marked.js
            marked.setOptions({
                highlight: function(code, lang) {
                    if (lang && hljs.getLanguage(lang)) {
                        return hljs.highlight(code, { language: lang }).value;
                    }
                    return hljs.highlightAuto(code).value;
                },
                breaks: true
            });

            let isGenerating = false;

            // Handle character count
            $('#prompt').on('input', function() {
                $('#charCount').text($(this).val().length + ' characters');
            });

            // Handle suggested prompts
            $('.suggested-prompt').click(function() {
                $('#prompt').val($(this).text().trim());
                $('#prompt').focus();
                $('#charCount').text($('#prompt').val().length + ' characters');
            });

            // Handle clear chat
            $('#clearChat').click(function() {
                if (confirm('Are you sure you want to clear the chat history?')) {
                    $('#chat-messages').html(`
                        <div class="bg-blue-50 p-4 rounded-lg">
                            <p class="text-gray-700">
                                ðŸ‘‹ Hello! I'm your AI assistant. I can help you with content creation, answering questions, 
                                and more. I support markdown formatting in my responses. Feel free to ask anything!
                            </p>
                        </div>
                    `);
                }
            });

            // Handle form submission
            $('#chat-form').on('submit', function(e) {
                e.preventDefault();
                if (isGenerating) return;

                const prompt = $('#prompt').val();
                if (!prompt) return;

                // Add user message
                addMessage('You', prompt, 'user');
                
                // Clear input and update char count
                $('#prompt').val('');
                $('#charCount').text('0 characters');

                isGenerating = true;
                addLoadingMessage();

                // Send request to server
                $.ajax({
                    url: '/Home/Generate',
                    type: 'POST',
                    data: { prompt: prompt },
                    success: function(response) {
                        removeLoadingMessage();
                        if (response.success) {
                            addMessage('Gemini', response.content, 'ai');
                        } else {
                            addMessage('Error', response.error, 'error');
                        }
                        isGenerating = false;
                    },
                    error: function() {
                        removeLoadingMessage();
                        addMessage('Error', 'Failed to get response', 'error');
                        isGenerating = false;
                    }
                });
            });

            function addLoadingMessage() {
                $('#chat-messages').append(`
                    <div class="loading-message p-3 rounded-lg bg-gray-50">
                        <div class="flex items-center space-x-2">
                            <div class="text-blue-600">Generating response</div>
                            <div class="flex space-x-1">
                                <div class="w-2 h-2 bg-blue-600 rounded-full animate-bounce"></div>
                                <div class="w-2 h-2 bg-blue-600 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
                                <div class="w-2 h-2 bg-blue-600 rounded-full animate-bounce" style="animation-delay: 0.4s"></div>
                            </div>
                        </div>
                    </div>
                `);
                scrollToBottom();
            }

            function removeLoadingMessage() {
                $('.loading-message').remove();
            }

            function addMessage(sender, content, type) {
                const messageDiv = $('<div>').addClass('p-4 rounded-lg ' + getMessageClass(type));
                const headerDiv = $('<div>').addClass('flex items-center space-x-2 mb-2');
                
                // Add avatar
                const avatar = $('<div>').addClass('w-8 h-8 rounded-full flex items-center justify-center text-white font-bold ' + getAvatarClass(type))
                    .text(sender.charAt(0));
                
                // Add sender name
                const senderDiv = $('<div>').addClass('font-bold').text(sender);
                
                headerDiv.append(avatar, senderDiv);
                
                // Add content with markdown support for AI messages
                const contentDiv = $('<div>').addClass('prose max-w-none');
                if (type === 'ai') {
                    contentDiv.html(marked.parse(content));
                    // Initialize syntax highlighting
                    contentDiv.find('pre code').each(function(i, block) {
                        hljs.highlightBlock(block);
                    });
                } else {
                    contentDiv.text(content);
                }

                messageDiv.append(headerDiv, contentDiv);
                $('#chat-messages').append(messageDiv);
                scrollToBottom();
            }

            function getMessageClass(type) {
                switch (type) {
                    case 'user':
                        return 'bg-blue-50 ml-12';
                    case 'ai':
                        return 'bg-white border border-gray-200 mr-12';
                    case 'error':
                        return 'bg-red-50 text-red-700';
                    default:
                        return 'bg-gray-50';
                }
            }

            function getAvatarClass(type) {
                switch (type) {
                    case 'user':
                        return 'bg-blue-600';
                    case 'ai':
                        return 'bg-green-600';
                    case 'error':
                        return 'bg-red-600';
                    default:
                        return 'bg-gray-600';
                }
            }

            function scrollToBottom() {
                const chatMessages = document.getElementById('chat-messages');
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            // Handle Shift+Enter for new line
            $('#prompt').keydown(function(e) {
                if (e.keyCode === 13 && !e.shiftKey) {
                    e.preventDefault();
                    $('#chat-form').submit();
                }
            });
        });
    </script>
} 