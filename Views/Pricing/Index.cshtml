@{
    ViewData["Title"] = "Pricing Plans";
}

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl">Choose Your Perfect Plan</h1>
            <p class="mt-5 text-xl text-gray-500">Start creating amazing content with our AI-powered tools</p>
        </div>

        <div class="mt-16 grid grid-cols-1 gap-8 lg:grid-cols-3">
            <!-- Free Plan -->
            <div class="relative bg-white rounded-2xl shadow-lg overflow-hidden transition-transform hover:scale-105">
                <div class="p-8">
                    <h3 class="text-2xl font-bold text-gray-900">Free</h3>
                    <p class="mt-4 text-gray-500">Perfect for getting started</p>
                    <p class="mt-8">
                        <span class="text-5xl font-bold text-gray-900">₹0</span>
                        <span class="text-gray-500">/month</span>
                    </p>
                    <ul class="mt-8 space-y-4">
                        <li class="flex items-center">
                            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="ml-3">5 AI generations/month</span>
                        </li>
                        <li class="flex items-center">
                            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="ml-3">Basic templates</span>
                        </li>
                    </ul>
                    <button onclick="startSubscription('free')" 
                            class="mt-8 w-full py-3 px-4 rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Get Started
                    </button>
                </div>
            </div>

            <!-- Pro Plan -->
            <div class="relative bg-indigo-600 rounded-2xl shadow-xl overflow-hidden transform scale-105">
                <div class="absolute top-0 right-0 bg-yellow-400 text-xs font-bold px-3 py-1 rounded-bl-lg">
                    POPULAR
                </div>
                <div class="p-8">
                    <h3 class="text-2xl font-bold text-white">Pro</h3>
                    <p class="mt-4 text-indigo-200">Best for professionals</p>
                    <p class="mt-8">
                        <span class="text-5xl font-bold text-white">₹2,499</span>
                        <span class="text-indigo-200">/month</span>
                    </p>
                    <ul class="mt-8 space-y-4">
                        <li class="flex items-center text-white">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="ml-3">Unlimited AI generations</span>
                        </li>
                        <li class="flex items-center text-white">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="ml-3">Premium templates</span>
                        </li>
                        <li class="flex items-center text-white">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="ml-3">Priority support</span>
                        </li>
                    </ul>
                    <button onclick="startSubscription('pro')"
                            class="mt-8 w-full py-3 px-4 rounded-lg text-indigo-600 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white">
                        Subscribe Now
                    </button>
                </div>
            </div>

            <!-- Enterprise Plan -->
            <div class="relative bg-white rounded-2xl shadow-lg overflow-hidden transition-transform hover:scale-105">
                <div class="p-8">
                    <h3 class="text-2xl font-bold text-gray-900">Enterprise</h3>
                    <p class="mt-4 text-gray-500">For large teams</p>
                    <p class="mt-8">
                        <span class="text-5xl font-bold text-gray-900">₹7,999</span>
                        <span class="text-gray-500">/month</span>
                    </p>
                    <ul class="mt-8 space-y-4">
                        <li class="flex items-center">
                            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="ml-3">Everything in Pro</span>
                        </li>
                        <li class="flex items-center">
                            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="ml-3">Custom integrations</span>
                        </li>
                        <li class="flex items-center">
                            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <span class="ml-3">24/7 support</span>
                        </li>
                    </ul>
                    <button onclick="startSubscription('enterprise')"
                            class="mt-8 w-full py-3 px-4 rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Contact Sales
                    </button>
                </div>
            </div>
        </div>

        <!-- Payment Modal -->
        <div id="paymentModal" class="fixed inset-0 bg-gray-500 bg-opacity-75 hidden">
            <div class="flex items-center justify-center min-h-screen">
                <div class="bg-white rounded-lg p-8 max-w-md w-full">
                    <h3 class="text-2xl font-bold mb-4">Complete Your Purchase</h3>
                    <form id="payment-form" action="/Pricing/ProcessPayment" method="post" class="space-y-4">
                        <input type="hidden" id="selected-plan" name="plan" value="">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Card Information</label>
                            <input type="text" id="card" name="cardNumber" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="Card number" required>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <input type="text" name="expiry" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="MM/YY" required>
                            </div>
                            <div>
                                <input type="text" name="cvc" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" placeholder="CVC" required>
                            </div>
                        </div>
                        <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700">
                            Pay Now
                        </button>
                        <button type="button" onclick="closePaymentModal()" class="w-full border border-gray-300 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-50">
                            Cancel
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function startSubscription(plan) {
            document.getElementById('selected-plan').value = plan;
            document.getElementById('paymentModal').classList.remove('hidden');
        }

        function closePaymentModal() {
            document.getElementById('paymentModal').classList.add('hidden');
        }
    </script>
}
