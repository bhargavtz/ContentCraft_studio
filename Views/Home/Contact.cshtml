@{
    ViewData["Title"] = "Contact Us";
}

<div class="max-w-4xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-8 text-center">Contact Us</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold mb-6">Get in Touch</h2>
            <form class="space-y-4">
                <div>
                    <label class="block text-gray-700 mb-2" for="name">Name</label>
                    <input type="text" id="name" name="name" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2" for="email">Email</label>
                    <input type="email" id="email" name="email" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2" for="subject">Subject</label>
                    <input type="text" id="subject" name="subject" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2" for="message">Message</label>
                    <textarea id="message" name="message" rows="4" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
                </div>
                <div class="text-sm text-gray-600 mt-4">
                    <p>By submitting this form, you agree to our <a href="/Home/Privacy" class="text-blue-600 hover:underline">Privacy Policy</a>.</p>
                </div>
                <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Send Message
                </button>
            </form>
        </div>
        
        <div class="space-y-8">
            <div class="bg-white rounded-lg shadow-lg p-8">
                <h2 class="text-2xl font-bold mb-4">Contact Information</h2>
                <div class="space-y-4">
                    <div>
                        <h3 class="font-bold text-gray-700">Address</h3>
                        <p class="text-gray-600">123 AI Avenue<br>Tech District<br>Innovation City, 12345</p>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-700">Email</h3>
                        <p class="text-gray-600">contact@contentcraftstudio.com</p>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-700">Phone</h3>
                        <p class="text-gray-600">+1 (555) 123-4567</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow-lg p-8">
                <h2 class="text-2xl font-bold mb-4">Business Hours</h2>
                <div class="space-y-2">
                    <p class="text-gray-600"><span class="font-bold">Monday - Friday:</span> 9:00 AM - 6:00 PM</p>
                    <p class="text-gray-600"><span class="font-bold">Saturday:</span> 10:00 AM - 4:00 PM</p>
                    <p class="text-gray-600"><span class="font-bold">Sunday:</span> Closed</p>
                </div>
            </div>
        </div>
    </div>
</div>

