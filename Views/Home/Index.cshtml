@{
    ViewData["Title"] = "Home";
}

<nav class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
    <div class="flex items-center">
        <img src="~/images/logo.png" alt="ContentCraft Studio" class="h-8 w-8 mr-2">
        <span class="text-xl font-semibold">ContentCraft Studio</span>
    </div>
    <div class="flex items-center space-x-6">
        <a href="@Url.Action("Index", "Tools")" class="text-gray-600 hover:text-gray-900">Tools</a>
        <a href="#" class="text-gray-600 hover:text-gray-900">Pricing</a>
        <a href="@Url.Action("SignIn", "Account")" class="text-gray-600 hover:text-gray-900">Sign In</a>
        <a href="@Url.Action("SignUp", "Account")" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700">Get Started</a>
    </div>
</nav>

<main>
    <!-- Hero Section -->
    <section class="max-w-7xl mx-auto px-4 py-16 grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
            <h1 class="text-5xl font-bold mb-6">
                Create Amazing Content with
                <span class="text-indigo-600 block mt-2">AI-Powered Tools</span>
            </h1>
            <p class="text-gray-600 text-lg mb-8">
                Empower your content creation with our suite of AI tools.
                Generate engaging captions, compelling blog posts, and
                stunning images in seconds.
            </p>
            <div class="flex space-x-4">
                <a href="#" class="bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700 flex items-center">
                    Get Started Free
                    <span class="ml-2">🚀</span>
                </a>
                <a href="#" class="text-gray-700 px-6 py-3 rounded-md border border-gray-300 hover:border-gray-400 flex items-center">
                    Explore Tools
                    <span class="ml-2">🔍</span>
                </a>
            </div>
        </div>
        <div class="relative">
            <img src="~/images/hero-image.jpg" alt="AI Tools Dashboard" class="rounded-lg shadow-xl">
            <div class="absolute bottom-4 right-4 bg-indigo-600 text-white px-4 py-2 rounded-md text-sm">
                Powered by AI
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-4">Powerful AI Tools at Your Fingertips</h2>
            <p class="text-gray-600 text-center mb-12">Everything you need to create engaging content for your audience</p>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Instagram Caption Generator -->
                <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                    <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
                        <span class="text-2xl">T</span>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Instagram Caption Generator</h3>
                    <p class="text-gray-600 mb-4">Create engaging captions that capture attention and drive engagement.</p>
                    <a href="#" class="text-indigo-600 hover:text-indigo-700 flex items-center">
                        Try it now
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>

                <!-- AI Image Generator -->
                <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                    <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
                        <span class="text-2xl">🎨</span>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">AI Image Generator</h3>
                    <p class="text-gray-600 mb-4">Transform your ideas into stunning visuals with our AI-powered image generator.</p>
                    <a href="#" class="text-indigo-600 hover:text-indigo-700 flex items-center">
                        Try it now
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>

                <!-- Blog Content Generator -->
                <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                    <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
                        <span class="text-2xl">✍️</span>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Blog Content Generator</h3>
                    <p class="text-gray-600 mb-4">Generate SEO-optimized blog content and titles that rank higher.</p>
                    <a href="#" class="text-indigo-600 hover:text-indigo-700 flex items-center">
                        Try it now
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-20">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">Trusted by Content Creators Worldwide</h2>
            <p class="text-center text-gray-600 mb-12">Join thousands of creators who trust ContentCraft Studio</p>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
                <div>
                    <div class="text-4xl font-bold text-indigo-600 mb-2">100K+</div>
                    <div class="text-gray-600">Active Users</div>
                </div>
                <div>
                    <div class="text-4xl font-bold text-indigo-600 mb-2">1M+</</div>
                    <div class="text-gray-600">Content Pieces</div>
                </div>
                <div>
                    <div class="text-4xl font-bold text-indigo-600 mb-2">98%</div>
                    <div class="text-gray-600">Satisfaction Rate</div>
                </div>
                <div>
                    <div class="text-4xl font-bold text-indigo-600 mb-2">50+</div>
                    <div class="text-gray-600">Countries</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonial Section -->
    <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4">
            <div class="bg-white p-8 rounded-xl shadow-sm max-w-3xl mx-auto">
                <div class="flex items-center mb-6">
                    <img src="~/images/avatar.jpg" alt="Michael Chen" class="w-12 h-12 rounded-full mr-4">
                    <div>
                        <h3 class="font-semibold">Michael Chen</h3>
                        <p class="text-gray-600 text-sm">Digital Marketing Director at GrowthLabs</p>
                    </div>
                </div>
                <p class="text-gray-700 italic">"The AI-powered tools have saved us countless hours. Our content production has doubled while maintaining consistent quality."</p>
                <div class="flex justify-center mt-6 space-x-2">
                    <button class="w-2 h-2 rounded-full bg-indigo-600"></button>
                    <button class="w-2 h-2 rounded-full bg-gray-300"></button>
                    <button class="w-2 h-2 rounded-full bg-gray-300"></button>
                </div>
            </div>
        </div>
    </section>

    <!-- Success Stories -->
    <section class="py-20">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-4">Success Stories</h2>
            <p class="text-center text-gray-600 mb-12">See how others are achieving amazing results</p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                    <img src="~/images/success-1.jpg" alt="Analytics Dashboard" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-2">From Zero to 100K Followers</h3>
                        <p class="text-gray-600 mb-4">How a small business used our AI tools to build a massive social media presence</p>
                        <div class="flex items-center text-indigo-600">
                            <span class="mr-2">10x engagement increase</span>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                    <img src="~/images/success-2.jpg" alt="Team Collaboration" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-2">Content Creation at Scale</h3>
                        <p class="text-gray-600 mb-4">Enterprise client generates 500+ pieces of content monthly</p>
                        <div class="flex items-center text-indigo-600">
                            <span class="mr-2">75% time saved</span>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-indigo-600">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold text-white mb-8">Ready to Transform Your Content Creation?</h2>
            <div class="flex justify-center space-x-4">
                <a href="#" class="bg-white text-indigo-600 px-8 py-3 rounded-md hover:bg-gray-100">Start Free Trial</a>
                <a href="#" class="border border-white text-white px-8 py-3 rounded-md hover:bg-indigo-700">View Pricing</a>
            </div>
        </div>
    </section>
</main>
