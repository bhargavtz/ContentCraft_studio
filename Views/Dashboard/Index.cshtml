@model ContentCraft_studio.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-10">
            <div>
                <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight">Welcome back, <span class="text-indigo-600">@Model.User.Name!</span></h1>
                <p class="mt-2 text-sm text-gray-600">Here's what's happening with your account today.</p>
            </div>
            <a href="@Url.Action("Profile", "Account")" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
                <svg class="-ml-1 mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Edit Profile
            </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-white overflow-hidden shadow-lg rounded-xl hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1">
                <div class="p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl p-4 shadow-inner">
                            <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                        </div>
                        <div class="ml-6 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Total Usage</dt>
                                <dd class="text-2xl font-bold text-gray-900 mt-1">@Model.TotalUsage</dd>
                                <dd class="text-sm text-gray-600 mt-1">Last 30 days</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

          
            <div class="bg-white overflow-hidden shadow-lg rounded-xl hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1">
                <div class="p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-gradient-to-br from-green-500 to-green-600 rounded-xl p-4 shadow-inner">
                            <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div class="ml-6 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Recent Activities</dt>
                                <dd class="text-2xl font-bold text-gray-900 mt-1">@Model.RecentActivities.Count</dd>
                                <dd class="text-sm text-gray-600 mt-1">Active sessions</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white overflow-hidden shadow-lg rounded-xl hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1">
                <div class="p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl p-4 shadow-inner">
                            <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                            </svg>
                        </div>
                        <div class="ml-6 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Subscription Status</dt>
                                <dd class="text-2xl font-bold text-gray-900 mt-1">Active</dd>
                                <dd class="text-sm text-green-600 mt-1">Premium Plan</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
        <!-- Image Descriptions -->
        <div class="mt-12">
            <div class="bg-white shadow-lg rounded-xl overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="px-6 py-5 border-b border-gray-200 flex justify-between items-center">
                    <div>
                        <h3 class="text-xl font-bold text-gray-900">Image Descriptions</h3>
                        <p class="mt-1 text-sm text-gray-500">Your recent AI-generated image descriptions</p>
                    </div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                        @Model.ImageDescriptions.Count() Total
                    </span>
                </div>
                <ul class="divide-y divide-gray-100">
                    @foreach (var description in Model.ImageDescriptions)
                    {
                        <li class="px-6 py-4 hover:bg-gray-50 transition-colors duration-150">
                            <div class="flex justify-between items-start">
                                <div class="flex-grow">
                                    <div class="text-sm font-medium text-gray-900">@description.Description</div>
                                    <div class="mt-1 flex items-center text-sm text-gray-500">
                                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                        @description.CreatedAt.ToString("MMM dd, yyyy")
                                    </div>
                                </div>
                                <div class="flex space-x-3">
                                    <button onclick="editDescription(@description.Id, '@description.Description')" class="text-sm text-indigo-600 hover:text-indigo-900 font-medium">Edit</button>
                                    <button onclick="deleteDescription(@description.Id)" class="text-sm text-red-600 hover:text-red-900 font-medium">Delete</button>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Edit Description Modal -->
        <div id="editModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full">
            <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                <div class="mt-3">
                    <h3 class="text-lg font-medium text-gray-900">Edit Description</h3>
                    <div class="mt-2">
                        <input type="hidden" id="editDescriptionId">
                        <textarea id="editDescriptionText" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" rows="4"></textarea>
                    </div>
                    <div class="mt-4 flex justify-end space-x-3">
                        <button onclick="closeEditModal()" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium rounded-md">Cancel</button>
                        <button onclick="saveDescription()" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-md">Save</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div id="deleteModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full">
            <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                <div class="mt-3">
                    <h3 class="text-lg font-medium text-gray-900">Confirm Delete</h3>
                    <div class="mt-2">
                        <p class="text-sm text-gray-500">Are you sure you want to delete this description?</p>
                        <input type="hidden" id="deleteDescriptionId">
                    </div>
                    <div class="mt-4 flex justify-end space-x-3">
                        <button onclick="closeDeleteModal()" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium rounded-md">Cancel</button>
                        <button onclick="confirmDelete()" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-md">Delete</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Business Name Modal -->
        <div id="editBusinessNameModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full">
            <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                <div class="mt-3">
                    <h3 class="text-lg font-medium text-gray-900">Edit Business Name</h3>
                    <div class="mt-2">
                        <input type="hidden" id="editBusinessNameId">
                        <textarea id="editBusinessNameText" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" rows="4"></textarea>
                    </div>
                    <div class="mt-4 flex justify-end space-x-3">
                        <button onclick="closeEditBusinessNameModal()" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium rounded-md">Cancel</button>
                        <button onclick="saveBusinessName()" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-md">Save</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Business Name Confirmation Modal -->
        <div id="deleteBusinessNameModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full">
            <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                <div class="mt-3">
                    <h3 class="text-lg font-medium text-gray-900">Confirm Delete</h3>
                    <div class="mt-2">
                        <p class="text-sm text-gray-500">Are you sure you want to delete this business name?</p>
                        <input type="hidden" id="deleteBusinessNameId">
                    </div>
                    <div class="mt-4 flex justify-end space-x-3">
                        <button onclick="closeDeleteBusinessNameModal()" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium rounded-md">Cancel</button>
                        <button onclick="confirmDeleteBusinessName()" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-md">Delete</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function editDescription(id, description) {
                document.getElementById('editDescriptionId').value = id;
                document.getElementById('editDescriptionText').value = description;
                document.getElementById('editModal').classList.remove('hidden');
            }

            function closeEditModal() {
                document.getElementById('editModal').classList.add('hidden');
            }

            function saveDescription() {
                const id = document.getElementById('editDescriptionId').value;
                const description = document.getElementById('editDescriptionText').value;
                
                fetch('/Dashboard/UpdateDescription', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: id, description: description })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.reload();
                    }
                });
            }

            function deleteDescription(id) {
                document.getElementById('deleteDescriptionId').value = id;
                document.getElementById('deleteModal').classList.remove('hidden');
            }

            function closeDeleteModal() {
                document.getElementById('deleteModal').classList.add('hidden');
            }

            function confirmDelete() {
                const id = document.getElementById('deleteDescriptionId').value;
                
                fetch('/Dashboard/DeleteDescription', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: id })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.reload();
                    }
                });
            }

            function editBusinessName(id, name) {
                document.getElementById('editBusinessNameId').value = id;
                document.getElementById('editBusinessNameText').value = name;
                document.getElementById('editBusinessNameModal').classList.remove('hidden');
            }

            function closeEditBusinessNameModal() {
                document.getElementById('editBusinessNameModal').classList.add('hidden');
            }

            function saveBusinessName() {
                const id = document.getElementById('editBusinessNameId').value;
                const name = document.getElementById('editBusinessNameText').value;

                fetch('/Dashboard/UpdateBusinessName', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: id, name: name })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.reload();
                    }
                });
            }

            function deleteBusinessName(id) {
                document.getElementById('deleteBusinessNameId').value = id;
                document.getElementById('deleteBusinessNameModal').classList.remove('hidden');
            }

            function closeDeleteBusinessNameModal() {
                document.getElementById('deleteBusinessNameModal').classList.add('hidden');
            }

            function confirmDeleteBusinessName() {
                const id = document.getElementById('deleteBusinessNameId').value;

                fetch('/Dashboard/DeleteBusinessName', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: id })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.reload();
                    }
                });
            }
        </script>

        <!-- Business Names -->
        <div class="mt-8">
            <div class="bg-white shadow-lg rounded-xl overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="px-6 py-5 border-b border-gray-200 flex justify-between items-center">
                    <div>
                        <h3 class="text-xl font-bold text-gray-900">Business Names</h3>
                        <p class="mt-1 text-sm text-gray-500">AI-generated business name suggestions</p>
                    </div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                        @Model.BusinessNames.Count() Generated
                    </span>
                </div>
                <ul class="divide-y divide-gray-100">
                    @foreach (var businessName in Model.BusinessNames)
                    {
                        <li class="px-6 py-4 hover:bg-gray-50 transition-colors duration-150">
                            <div class="flex justify-between items-start">
                                <div class="flex-grow">
                                    <div class="text-base font-semibold text-indigo-600">@businessName.Name</div>
                                    <div class="mt-1 flex items-center text-sm text-gray-500">
                                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                        @businessName.CreatedAt.ToString("MMM dd, yyyy")
                                    </div>
                                </div>
                                <div class="flex space-x-3">
                                    <button onclick="editBusinessName('@businessName.Id', '@businessName.Name')" class="text-sm text-indigo-600 hover:text-indigo-900 font-medium">Edit</button>
                                    <button onclick="deleteBusinessName('@businessName.Id')" class="text-sm text-red-600 hover:text-red-900 font-medium">Delete</button>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Blog Posts -->
        <div class="mt-8">
            <div class="bg-white shadow-lg rounded-xl overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="px-6 py-5 border-b border-gray-200 flex justify-between items-center">
                    <div>
                        <h3 class="text-xl font-bold text-gray-900">Blog Posts</h3>
                        <p class="mt-1 text-sm text-gray-500">Your AI-generated blog content</p>
                    </div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                        @Model.BlogPosts.Count() Posts
                    </span>
                </div>
                <ul class="divide-y divide-gray-100">
                    @foreach (var blogPost in Model.BlogPosts)
                    {
                        <li class="px-6 py-4 hover:bg-gray-50 transition-colors duration-150">
                            <div class="space-y-3">
                                <div class="flex items-center justify-between">
                                    <h4 class="text-base font-semibold text-indigo-600">@blogPost.Title</h4>
                                    <div class="flex items-center space-x-2">
                                        <button class="text-sm text-indigo-600 hover:text-indigo-900 font-medium">Edit</button>
                                        <span class="text-gray-300">|</span>
                                        <button class="text-sm text-indigo-600 hover:text-indigo-900 font-medium">Share</button>
                                    </div>
                                </div>
                                <p class="text-sm text-gray-900 line-clamp-2">@blogPost.Content</p>
                                <div class="flex items-center text-sm text-gray-500">
                                    <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    @blogPost.CreatedAt.ToString("MMM dd, yyyy")
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Stories -->
        <div class="mt-8">
            <div class="bg-white shadow-lg rounded-xl overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="px-6 py-5 border-b border-gray-200 flex justify-between items-center">
                    <div>
                        <h3 class="text-xl font-bold text-gray-900">Stories</h3>
                        <p class="mt-1 text-sm text-gray-500">Your AI-generated story content</p>
                    </div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                        @Model.Stories.Count() Stories
                    </span>
                </div>
                <ul class="divide-y divide-gray-100">
                    @foreach (var story in Model.Stories)
                    {
                        <li class="px-6 py-4 hover:bg-gray-50 transition-colors duration-150">
                            <div class="space-y-2">
                                <p class="text-sm text-gray-900">@story.Content</p>
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center text-sm text-gray-500">
                                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                        @story.CreatedAt.ToString("MMM dd, yyyy")
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <button class="text-sm text-indigo-600 hover:text-indigo-900 font-medium">Edit</button>
                                        <span class="text-gray-300">|</span>
                                        <button class="text-sm text-indigo-600 hover:text-indigo-900 font-medium">Share</button>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Captions -->
        <div class="mt-8">
            <div class="bg-white shadow-lg rounded-xl overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="px-6 py-5 border-b border-gray-200 flex justify-between items-center">
                    <div>
                        <h3 class="text-xl font-bold text-gray-900">Instagram Captions</h3>
                        <p class="mt-1 text-sm text-gray-500">Your AI-generated Instagram captions</p>
                    </div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-pink-100 text-pink-800">
                        @Model.Captions.Count() Captions
                    </span>
                </div>
                <ul class="divide-y divide-gray-100">
                    @foreach (var caption in Model.Captions)
                    {
                        <li class="px-6 py-4 hover:bg-gray-50 transition-colors duration-150" id="caption-@caption.Id">
                            <div class="space-y-2">
                                <p class="text-sm text-gray-900 caption-text">@caption.Text</p>
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center text-sm text-gray-500">
                                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                        @caption.CreatedAt.ToString("MMM dd, yyyy")
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <button onclick="editCaption('@caption.Id', '@caption.Text')" class="text-sm text-indigo-600 hover:text-indigo-900 font-medium">Edit</button>
                                        <span class="text-gray-300">|</span>
                                        <button onclick="deleteCaption('@caption.Id')" class="text-sm text-red-600 hover:text-red-900 font-medium">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Edit Caption Modal -->
        <div id="editCaptionModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full">
            <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                <div class="mt-3">
                    <h3 class="text-lg font-medium text-gray-900">Edit Caption</h3>
                    <div class="mt-2">
                        <input type="hidden" id="editCaptionId">
                        <textarea id="editCaptionText" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" rows="4"></textarea>
                    </div>
                    <div class="mt-4 flex justify-end space-x-3">
                        <button onclick="closeEditCaptionModal()" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium rounded-md">Cancel</button>
                        <button onclick="updateCaption()" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-md">Save</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Caption Modal -->
        <div id="deleteCaptionModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full">
            <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                <div class="mt-3">
                    <h3 class="text-lg font-medium text-gray-900">Delete Caption</h3>
                    <div class="mt-2">
                        <p class="text-sm text-gray-500">Are you sure you want to delete this caption? This action cannot be undone.</p>
                        <input type="hidden" id="deleteCaptionId">
                    </div>
                    <div class="mt-4 flex justify-end space-x-3">
                        <button onclick="closeDeleteCaptionModal()" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium rounded-md">Cancel</button>
                        <button onclick="confirmDeleteCaption()" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-md">Delete</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function editDescription(id, description) {
                document.getElementById('editDescriptionId').value = id;
