@{
    ViewData["Title"] = "Email Verification Required";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
        <div class="text-center">
            <h2 class="text-2xl font-bold mb-4">Email Verification Required</h2>
            <p class="text-gray-600 mb-6">Please verify your email address before continuing. We've sent you a verification link to your email address.</p>
            <div class="space-y-4">
                <p class="text-sm text-gray-500">Haven't received the verification email?</p>
                <div class="flex flex-col space-y-3">
                    <a href="/Account/Login" class="inline-block bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors">
                        Try Again
                    </a>
                    <a href="/Account/Logout" class="inline-block bg-gray-600 text-white px-6 py-2 rounded-md hover:bg-gray-700 transition-colors">
                        Switch Account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>